<div>
  <h1 class="admin-title">Create New Role</h1>
  <%= form_with(model: @user_role, multipart: true) do |form| %>
    <div class="row col-10"><%= form.label :name, "Name" %><span>*</span></div>
    <%= form.text_field :name, class: "form-control customer-form-wrapper", id: "input" %>

    <div class="form-group select-form-margin-top">
      <%= form.label :email, "Email" %>
      <%= form.text_field :email, class: "form-control customer-form-wrapper", id: "input" %>
    </div>

    <div class="form-group select-form-margin-top">
      <%= form.label :roles, "Roles" %>
      <%= form.select :roles, ["Admin", "Staff"], { include_blank: false }, { class: "form-control customer-form-wrapper", id: "pax-per-room" } %>
    </div>
    <br>

    <%= form.submit "Create New User", { class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px", id: "new-role-user" } %>

  <% end %>
</div>


