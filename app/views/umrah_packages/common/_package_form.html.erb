<div class="container form-group col-md-8">
  <% @image ||= nil %>
  <%= form_with(model: @umrah_package) do |form| %>

    <%= form.label :title, "Title" %>
    <%= form.text_field :title, placeholder: "e.g Umrah Safwa", class: "form-control customer-form-wrapper", disabled: disabled %>

    <div class="form-group select-form-margin-top">
      <%= form.label :package_type, "Umrah Type" %>
      <%= form.select :package_type, ["Umrah Standard", "Umrah Ramadhan", "Umrah Family"], { include_blank: false }, { class: "form-control customer-form-wrapper", disabled: disabled } %>
    </div>

    <div class="form-group">
      <%= form.label :price, "Price" %>
      <br>
      <div class="row col-md-12">
        <label class="col-form-label" style="margin-top:0.5rem">RM</label>
        <div class="col-sm-11">
          <%= form.number_field :price, placeholder: "0.00", class: "form-control customer-form-wrapper", disabled: disabled %>
        </div>
      </div>
    </div>
    <br>
    <div class="form-group select-form-margin-top">
      <%= form.label :hotel %>
      <%= form.text_field :hotel, placeholder: "e.g Hotel Safwa", class: "form-control customer-form-wrapper", disabled: disabled %>
    </div>

    <div class="form-group select-form-margin-top">
      <%= form.label :package_type, "Umrah Type" %>
      <%= form.select :package_type, ["Umrah Standard", "Umrah Ramadhan", "Umrah Family"], { include_blank: false }, { class: "form-control customer-form-wrapper", disabled: disabled } %>
    </div>
    <dl class="form-group">
      <dd>
        <p3>Package Poster</p3>
      </dd>
      <% if @image.present? %>
        <dd><%= image_tag(@image.picture.url, size: '150x150', class: "img-thumbnail", disabled: disabled) unless @image.picture.nil? %></dd>
        <%= link_to "Change poster", edit_image_path(@image.id, is_from_package: true, package_id: @umrah_package.id), class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" if disabled.blank? %>
        <%#= link_to "Change poster", new_image_path(is_update_package: true), class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" if disabled.blank?  %>
      <% elsif @enable_poster_upload %>
        <div class="form-group">
          <%= link_to "Change poster", new_image_path(is_update_poster_from_package: true, package_id: @umrah_package.id), class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" if disabled.blank? %>
        </div>
      <% end %>
    </dl>

    <% if disabled %>
      <%= link_to "Edit Package", edit_umrah_package_path(@umrah_package.id), class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" %>
    <% else %>
      <% if @is_new_package %>
        <%= form.submit "Register New Packages", class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" %>
      <% else %>
        <%= form.submit "Update Package", class: "btn btn-primary text-white select-form-margin-top", style: "font-size:12px" %>
      <% end %>
    <% end %>
    </div>
  <% end %>
